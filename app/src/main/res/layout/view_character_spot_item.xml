<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:support="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <io.fs.marvel.widget.AspectImageView
        android:id="@+id/viewCharacterImage"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_placeholder"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/viewCharacterText"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:text="@string/app_name"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp16"
        android:layout_marginTop="@dimen/dp8"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintTop_toBottomOf="@+id/viewCharacterImage"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/viewCharacterDescription"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="@string/app_name"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp16"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp4"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintTop_toBottomOf="@+id/viewCharacterText"
        support:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>