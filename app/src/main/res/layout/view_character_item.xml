<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:support="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/viewCharacterImage"
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintTop_toTopOf="parent"
        support:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginBottom="@dimen/dp16"
        tools:src="@drawable/ic_placeholder_circular"
        android:layout_width="@dimen/dp72"
        android:layout_height="@dimen/dp72" />

    <TextView
        android:id="@+id/viewCharacterText"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        tools:text="@string/app_name"
        android:maxLines="2"
        android:ellipsize="end"
        support:layout_constraintStart_toEndOf="@+id/viewCharacterImage"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintTop_toTopOf="@+id/viewCharacterImage"
        support:layout_constraintBottom_toBottomOf="@id/viewCharacterImage"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp16"
        android:layout_width="@dimen/dp0"
        android:layout_height="wrap_content" />

    <View
        support:layout_constraintStart_toStartOf="parent"
        support:layout_constraintEnd_toEndOf="parent"
        support:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/grey"
        android:alpha="0.7"
        android:layout_marginStart="@dimen/dp32"
        android:layout_marginEnd="@dimen/dp32"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp1" />

</androidx.constraintlayout.widget.ConstraintLayout>